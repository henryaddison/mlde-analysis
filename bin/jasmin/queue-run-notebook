#!/bin/bash
# Script for queueing a notebook run job on LOTUS on JASMIN via lotus-wrapper script

set -euo pipefail

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

smem=128G
spartition=high-mem
stime=02:00:00

while getopts ":m:p:t:" opt; do
  case ${opt} in
    m)
      smem=${OPTARG}
      ;;
    p)
      spartition=${OPTARG}
      ;;
    t)
      stime=${OPTARG}
      ;;
    \? )
      # echo "Invalid option: -${OPTARG}" 1>&2
     ;;
    : )
      echo "Invalid option: $OPTARG requires an argument" 1>&2
      exit 1
      ;;
  esac
done
shift "$((OPTIND -1))"

sbatch --parsable --chdir=/home/users/vf20964/code/mlde-analysis --partition=${spartition} --time=${stime} --mem=${smem} -- ${SCRIPT_DIR}/lotus-wrapper sh bin/run-notebook $@
